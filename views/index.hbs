                                    <p class="matches2 user-bets">-</p>
                                    <p class="matches2 user-bets">-</p>
                                    <p class="matches2 user-bets">-</p>
                                    <p class="matches2 user-bets">-</p>
                                    <p class="matches2 user-bets">-</p>
                                    <p class="matches2 user-bets">-</p>
                                    <p class="matches2 user-bets">-</p>
                                    <p class="matches2 user-bets">-</p>
                                    <p class="matches2 user-bets">-</p>
                                    {{/if}}
                                </div>
                                <div class="col-lg-4 text-center">
                                    <p class="matches2 results"></p>
                                    <p class="matches2 results"></p>
                                    <p class="matches2 results"></p>
                                    <p class="matches2 results"></p>
                                    <p class="matches2 results"></p>
                                    <p class="matches2 results"></p>
                                    <p class="matches2 results"></p>
                                    <p class="matches2 results"></p>
                                    <p class="matches2 results"></p>
                                    <p class="matches2 results"></p>
                                </div>
                                <div class="col-lg-4 text-center">
                                    <p class="matches2 points"></p>
                                    <p class="matches2 points"></p>
                                    <p class="matches2 points"></p>
                                    <p class="matches2 points"></p>
                                    <p class="matches2 points"></p>
                                    <p class="matches2 points"></p>
                                    <p class="matches2 points"></p>
                                    <p class="matches2 points"></p>
                                    <p class="matches2 points"></p>
                                    <p class="matches2 points"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {{!-- Ranking --}}
                <div id="ranking-table">

                    <div class="row">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-6"></div>
                        <div class="col-lg-4 text-center">
                            <p>POINTS</p>
                        </div>
                    </div>

                     <div id="not-users" class="row">
                        <div class="col-lg-12">
                            <p class="not-user-msg"
                                No player bet on {{round2}}</p>
                        </div>
                    </div>

                    <div class="row">
                        <div id="usersPos" class="col-lg-2 text-center"></div>
                        <div id="usersRanking" class="col-lg-6">


                        </div>
                        <div id="usersScores" class="col-lg-4 text-center">

                        </div>
                    </div>
                </div>


                <div class="total">
                    <p class="totals">{{user.username}}, your score in {{round2}} is: <span id="total-data"
                            class="global-data">0</span></p>
                    {{!-- <p class="totals">GLOBAL: <span id="global-data" class="global-data">0</span></span></p> --}}
                </div>

                <div class="buttons-right">
                    <button class="secondary-button button" id="go-ranking">RANKING</button>
                    <button class="secondary-button button" id="go-lastkiniela">LAST KINIELA</button>

                </div>

            </div>

        </div>
        {{else}}
        <!-- PARA PINTAR EL INDEX -->
        <div class="col-lg-8 bg-index">

            <div class="container-index">
                <img src="images/kiniela-logo-big.png" alt="" class="kiniela-logo-big">
                <p> Nobody knows more about football than you!</p>
                <a href="/login"><button class="main-button button">LOG IN</button></a>
                <a href="/signup"><button class="secondary-button button">SIGN UP</button></a>
            </div>

        </div>

        {{/if}}
    </div>
</div>